<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="en-US">
  <homegearUiElement>
    <id>Base.heatingSliderModeWindowhandle</id>
    <control>heatingSliderModeWindowhandle</control>
    <type>complex</type>
    <description>UI element to control the setpoint temperature, set the heating mode and visualize the current room temperature. In addition there is an input for the current window state. The window state is display in the UI element and an open window disables the control.</description>
    <texts>
      <text id="title">
        <content>Heating</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Heating</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="temperature">
        <name>heater_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l2">
        <name>heater_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <grid>
      <width>3</width>
      <height>3</height>
      <columns>1</columns>
      <rows>3</rows>
    </grid>
    <controls>
      <control id="Base.heatingTemperature">
        <x>0</x>
        <y>0</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.heatingSlider">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.heatingMode">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.windowHandle">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
    </controls>
    <metadata>
      <l2_action>
        <control>0</control>
        <input>0</input>
      </l2_action>
    </metadata>
  </homegearUiElement>
</homegearUiElements>
