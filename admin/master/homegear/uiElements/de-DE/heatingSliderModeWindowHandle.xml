<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <id>Base.heatingSliderModeWindowhandle</id>
    <control>heatingSliderModeWindowhandle</control>
    <type>complex</type>
    <description>UI-Element zum Setzen der Solltemperatur des Heizungsmodus und Visualisieren der aktuellen Raumtemperatur. Zusätzlich gibt es einen Eingang für den aktuellen Fensterstatus, welcher im UI-Element angezeigt wird und die Bedienung beim Öffnen des Fensters deaktiviert.</description>
    <texts>
      <text id="title">
        <content>Heizung</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Status</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="temperature">
        <name>heater_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l2">
        <name>heater_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <grid>
      <width>3</width>
      <height>3</height>
      <columns>1</columns>
      <rows>3</rows>
    </grid>
    <controls>
      <control id="Base.heatingTemperature">
        <x>0</x>
        <y>0</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.heatingSlider">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.heatingMode">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
      <control id="Base.windowHandle">
        <x>0</x>
        <y>1</y>
        <columns>1</columns>
        <rows>1</rows>
      </control>
    </controls>
    <metadata>
      <l2_action>
        <control>0</control>
        <input>0</input>
      </l2_action>
    </metadata>
  </homegearUiElement>
</homegearUiElements>
