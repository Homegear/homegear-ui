<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="en-US">
  <homegearUiElement>
    <uniqueUiElementId>Base.doorLock</uniqueUiElementId>
    <control>doorLock</control>
    <type>simple</type>
    <description>Visualizes the state of a door lock.</description>
    <texts>
      <text id="title">
        <content>State</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>State</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>door-handle_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Lock state</label>
        <description>The lock state to visualize.</description>
        <types>bool</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <rendering>
          <condition operator="e" value="0">
            <icons>
              <icon id="state">
                <name>door-handle_1</name>
                <color>inactive</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>unlocked</content>
                <color>inactive</color>
              </text>
            </texts>
          </condition>
          <condition operator="not" value="0">
            <icons>
              <icon id="state">
                <name>door-handle_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>locked</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
        </rendering>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
