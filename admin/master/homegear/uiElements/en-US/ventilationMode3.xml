<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="en-US">
  <homegearUiElement>
    <uniqueUiElementId>Base.ventilationMode3</uniqueUiElementId>
    <control>ventilationMode3</control>
    <type>simple</type>
    <description>UI element to visualize a ventilation with four levels.</description>
    <texts>
      <text id="title">
        <content>Mode</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Mode</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>ventilator_2</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Level</label>
        <description>The level to activate in the UI element.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <rendering>
          <condition operator="e" value="0">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Level 1</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="1">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Level 2</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="2">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Level 3</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
        </rendering>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>Level</label>
        <description>The level which was activated in the UI element.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
    <metadata>
      <l3_force>true</l3_force>
    </metadata>
  </homegearUiElement>
</homegearUiElements>
