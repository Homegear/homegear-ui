<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <uniqueUiElementId>Base.lightingBrightnessThreshold</uniqueUiElementId>
    <control>lightingBrightnessThreshold</control>
    <type>simple</type>
    <description>UI-Element zum Setzen der Helligkeitsschwelle.</description>
    <texts>
      <text id="title">
        <content>Helligkeitsschwelle</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Schwelle</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>light_on_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Helligkeitsschwelle</label>
        <description>Setzt die Helligkeitsschwelle, welche das UI-Element anzeigt.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <unit>lx</unit>
        <minimumValue>100</minimumValue>
        <maximumValue>15000</maximumValue>
        <minimumValueScaled>100</minimumValueScaled>
        <maximumValueScaled>15000</maximumValueScaled>
        <visualizeInOverview>false</visualizeInOverview>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>Helligkeitsschwelle</label>
        <description>Gibt die Helligkeitsschwelle aus, welche im UI-Element eingestellt wurde.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
