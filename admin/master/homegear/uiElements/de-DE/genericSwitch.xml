<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <uniqueUiElementId>Base.genericSwitch</uniqueUiElementId>
    <control>genericSwitch</control>
    <type>simple</type>
    <texts>
      <text id="title">
        <color>title</color>
      </text>
    </texts>
    <variableInputs>
      <variable>
        <label>Status</label>
        <description>Setzt den Status in der Visualisierung.</description>
        <types>bool</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <rendering>
          <condition operator="not" value="0">
            <icons>
              <icon id="state">
                <name>socket_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>an</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="0">
            <icons>
              <icon id="state">
                <name>socket_1</name>
                <color>inactive</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>aus</content>
                <color>inactive</color>
              </text>
            </texts>
          </condition>
        </rendering>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>Status</label>
        <description>Gibt Status√§nderungen der UI aus.</description>
        <types>bool</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
