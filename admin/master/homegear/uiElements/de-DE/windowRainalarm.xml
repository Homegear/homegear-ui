<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <uniqueUiElementId>Base.windowRainalarm</uniqueUiElementId>
    <control>windowRainalarm</control>
    <type>simple</type>
    <description>Stellt komplexen Elementen einen Baustein zum Visualisieren eines Regenalarms zur Verf√ºgung.</description>
    <texts>
      <text id="title">
        <content>Alarm</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Regen</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>weather_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Regenalarm</label>
        <description>Setzt den Regenalarm des UI-Elements.</description>
        <types>bool</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <rendering>
          <condition operator="not" value="0">
            <icons>
              <icon id="state">
                <name>weather_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>aktiv</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="0">
            <icons>
              <icon id="state">
                <name>weather_1</name>
                <color>inactive</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>inaktiv</content>
                <color>inactive</color>
              </text>
            </texts>
          </condition>
        </rendering>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>-</label>
        <description>Ungenutzt</description>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
