<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <uniqueUiElementId>Base.heatingMode</uniqueUiElementId>
    <control>heatingMode</control>
    <type>simple</type>
    <description>UI-Element zum Setzen des Heizmodus (Frostschutz, Komfortmodus oder Sparmodus).</description>
    <texts>
      <text id="title">
        <content>Betriebsmodus</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Modus</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>thermometer_1</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Heizmodus</label>
        <description>Der Heizmodus, welchen das UI-Element anzeigen soll. Der Wert "0" entspricht dabei "Frostschutz", "1" dem Komfortmodus und "2" dem Sparmodus.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <rendering>
          <condition operator="e" value="0">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Frostschutz</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="1">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Komfort</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
          <condition operator="e" value="2">
            <icons>
              <icon id="state">
                <name>arrow_up_1</name>
                <color>active</color>
              </icon>
            </icons>
            <texts>
              <text id="state">
                <content>Spar</content>
                <color>active</color>
              </text>
            </texts>
          </condition>
        </rendering>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>Heizmodus</label>
        <description>Gibt den Heizmodus aus, welcher am UI-Element ausgew√§hlt wurde. Der Wert "0" entspricht dabei "Frostschutz", "1" dem Komfortmodus und "2" dem Sparmodus.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
