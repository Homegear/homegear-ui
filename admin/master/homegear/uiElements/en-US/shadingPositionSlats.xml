<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="en-US">
  <homegearUiElement>
    <uniqueUiElementId>Base.shadingPositionSlats</uniqueUiElementId>
    <control>shadingPositionSlats</control>
    <type>simple</type>
    <texts>
      <text id="title">
        <content>Slats position</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Slats</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="l2">
        <name>blind_2</name>
        <color>inactive</color>
      </icon>
      <icon id="l3">
        <name>arrow_right_1</name>
        <color>iconArrow</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Slats position</label>
        <description>Sets the visualized slats position.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <unit>%</unit>
        <minimumValue>0</minimumValue>
        <maximumValue>100</maximumValue>
        <minimumValueScaled>0</minimumValueScaled>
        <maximumValueScaled>100</maximumValueScaled>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>Slats position</label>
        <description>Outputs the slats position set in the UI element.</description>
        <types>int</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
