<?xml version="1.0" encoding="utf-8"?>
<homegearUiElements lang="de-DE">
  <homegearUiElement>
    <uniqueUiElementId>Base.lightingTimerStatus</uniqueUiElementId>
    <control>lightingTimerStatus</control>
    <type>simple</type>
    <description>Visualisiert den Ausschalttimer eines Lichts.</description>
    <texts>
      <text id="title">
        <content>Timer</content>
        <color>title</color>
      </text>
      <text id="l2_state_title">
        <content>Restzeit</content>
        <color>l2_state_title</color>
      </text>
    </texts>
    <icons>
      <icon id="main">
        <name>light_on_1</name>
        <color>inactive</color>
      </icon>
    </icons>
    <variableInputs>
      <variable>
        <label>Timer</label>
        <description>Setzt den aktuellen Wert im UI-Element.</description>
        <types>string</types>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
        <visualizeInOverview>true</visualizeInOverview>
        <unit>min</unit>
        <automationInfo>
          <type>string</type>
        </automationInfo>
      </variable>
    </variableInputs>
    <variableOutputs>
      <variable>
        <label>-</label>
        <description>Ungenutzt</description>
        <deviceTypeId>*</deviceTypeId>
        <channel>*</channel>
        <name>*</name>
      </variable>
    </variableOutputs>
  </homegearUiElement>
</homegearUiElements>
